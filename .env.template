# Environment Variables Template
# Copy to .env and fill in your values

# Database Configuration
DB_PASSWORD=your_secure_postgres_password_here

# Django Security
SECRET_KEY=your_very_long_and_random_secret_key_here_min_50_chars
DEBUG=False
ALLOWED_HOSTS=localhost,127.0.0.1,frontend

# API Keys for Enhanced Reconnaissance
# Get these from respective service providers

# Shodan (https://www.shodan.io/)
SHODAN_API_KEY=your_shodan_api_key_here

# Censys (https://censys.io/)
CENSYS_API_ID=your_censys_api_id_here
CENSYS_SECRET=your_censys_secret_here

# SecurityTrails (https://securitytrails.com/)
SECURITYTRAILS_API_KEY=your_securitytrails_api_key_here

# VirusTotal (https://www.virustotal.com/)
VIRUSTOTAL_API_KEY=your_virustotal_api_key_here

# GitHub Token for GitHub reconnaissance
GITHUB_TOKEN=your_github_personal_access_token_here

# Binary Edge (https://www.binaryedge.io/)
BINARYEDGE_API_KEY=your_binaryedge_api_key_here

# ZoomEye (https://www.zoomeye.org/)
ZOOMEYE_API_KEY=your_zoomeye_api_key_here

# Application Settings
DJANGO_LOG_LEVEL=INFO
CELERY_LOG_LEVEL=INFO

# Screenshot Settings
SCREENSHOT_TIMEOUT=30
MAX_SCREENSHOT_SIZE=1920x1080

# Rate Limiting Defaults
DEFAULT_REQUESTS_PER_SECOND=5.0
DEFAULT_CONCURRENT_REQUESTS=10
DEFAULT_REQUEST_DELAY_MS=200

# Evidence Storage
EVIDENCE_RETENTION_DAYS=90
MAX_EVIDENCE_SIZE_MB=100

# Report Settings
REPORTS_RETENTION_DAYS=365
MAX_REPORT_SIZE_MB=50

# Redis Configuration
REDIS_URL=redis://redis:6379/0

# Celery Configuration
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# Nginx Configuration (if using SSL)
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# Optional: Sentry for error tracking
# SENTRY_DSN=your_sentry_dsn_here

# Optional: Custom tool paths (if not using containerized tools)
# CUSTOM_TOOLS_PATH=/opt/custom-tools/bin