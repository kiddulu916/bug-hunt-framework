# Bug Bounty Automation Platform Environment Configuration
# Copy this file to .env and update values for your environment

# Environment
DEBUG=True
ENVIRONMENT=development

# Security
SECRET_KEY=development-secret-key-change-in-production
JWT_SECRET_KEY=development-jwt-secret-key
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Database Configuration (Docker)
POSTGRES_DB=bugbounty_db
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_HOST=db
POSTGRES_PORT=5432
DATABASE_URL=postgresql://postgres:postgres@db:5432/bugbounty_db

# Redis Configuration (Docker)
REDIS_PASSWORD=redis_password
REDIS_URL=redis://:redis_password@redis:6379/0

# Network Configuration (Docker)
ALLOWED_HOSTS=localhost,127.0.0.1,django,bugbounty_django,fastapi,bugbounty_fastapi
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://localhost:80

# Email Configuration
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
EMAIL_HOST=
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=
DEFAULT_FROM_EMAIL=noreply@bugbountyplatform.com

# Logging
LOG_LEVEL=INFO

# Bug Bounty Platform Settings
DEFAULT_REQUESTS_PER_SECOND=5.0
DEFAULT_CONCURRENT_REQUESTS=10
DEFAULT_REQUEST_DELAY_MS=200
MAX_SCAN_DURATION_HOURS=24
MAX_UPLOAD_SIZE=52428800

# Tool Paths (update for your system)
AMASS_PATH=/usr/bin/amass
SUBFINDER_PATH=/usr/bin/subfinder
NUCLEI_PATH=/usr/bin/nuclei
HTTPX_PATH=/usr/bin/httpx
NMAP_PATH=/usr/bin/nmap
MASSCAN_PATH=/usr/bin/masscan
SQLMAP_PATH=/usr/bin/sqlmap
NIKTO_PATH=/usr/bin/nikto
GOBUSTER_PATH=/usr/bin/gobuster
FFUF_PATH=/usr/bin/ffuf

# Monitoring (optional)
SENTRY_DSN=

# Admin Configuration
ADMIN_URL=admin/

# Storage (for production, consider cloud storage)
MEDIA_ROOT=/app/media
STATIC_ROOT=/app/static

# Celery Configuration (Docker)
CELERY_BROKER_URL=redis://:redis_password@redis:6379/0
CELERY_RESULT_BACKEND=redis://:redis_password@redis:6379/0
CELERY_WORKER_CONCURRENCY=4

# Production Environment Variables (for docker-compose.prod.yml)
# Uncomment and update for production deployment
# POSTGRES_PASSWORD=secure_production_password
# REDIS_PASSWORD=secure_production_redis_password
# SECRET_KEY=secure_production_secret_key
# JWT_SECRET_KEY=secure_production_jwt_key
# ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com
# CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
# SENTRY_DSN=your_sentry_dsn_here
# DOMAIN_NAME=yourdomain.com
# ADMIN_PASSWORD=secure_admin_password
# FLOWER_USERNAME=admin
# FLOWER_PASSWORD=secure_flower_password

# Development Settings
DJANGO_SETTINGS_MODULE=config.settings.development