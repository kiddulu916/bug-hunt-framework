# Environment Configuration for Bug Bounty Platform
# Copy this file to .env and update the values

# Application Settings
DEBUG=True
SECRET_KEY=your-super-secret-key-change-this-in-production
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Database Configuration
POSTGRES_DB=bugbounty_platform
POSTGRES_USER=bugbounty_user
POSTGRES_PASSWORD=secure_password_here
POSTGRES_HOST=db
POSTGRES_PORT=5432
DATABASE_URL=postgresql://bugbounty_user:secure_password_here@db:5432/bugbounty_platform

# Redis Configuration
REDIS_URL=redis://redis:6379/0
REDIS_PORT=6379

# Service Ports
API_PORT=8000
FRONTEND_PORT=3000
FLOWER_PORT=5555
NGINX_PORT=80
NGINX_SSL_PORT=443

# Build Configuration
BUILD_TARGET=development

# Frontend Configuration
REACT_APP_API_URL=http://localhost:8000/api
REACT_APP_WS_URL=ws://localhost:8000/ws

# Security Settings
JWT_SECRET_KEY=jwt-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Email Configuration (for notifications)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password

# Bug Bounty Platform Settings
DEFAULT_REQUESTS_PER_SECOND=5.0
DEFAULT_CONCURRENT_REQUESTS=10
DEFAULT_REQUEST_DELAY_MS=200
MAX_SCAN_DURATION_HOURS=24

# Tool Paths (adjust based on your system)
AMASS_PATH=/usr/bin/amass
SUBFINDER_PATH=/usr/bin/subfinder
NUCLEI_PATH=/usr/bin/nuclei
HTTPX_PATH=/usr/bin/httpx
NMAP_PATH=/usr/bin/nmap
SQLMAP_PATH=/usr/bin/sqlmap

# File Storage
MEDIA_ROOT=/app/media
STATIC_ROOT=/app/static
SCAN_RESULTS_DIR=/app/scan_results
MAX_UPLOAD_SIZE=50MB

# Logging
LOG_LEVEL=INFO
LOG_FILE=/app/logs/application.log

# Monitoring and Analytics
SENTRY_DSN=your-sentry-dsn-here
ENABLE_METRICS=True

# Development Settings
ENABLE_DEBUG_TOOLBAR=True
ENABLE_SILK_PROFILING=False

# Production Settings (uncomment for production)
# USE_SSL=True
# SECURE_SSL_REDIRECT=True
# SECURE_HSTS_SECONDS=31536000
# SECURE_HSTS_INCLUDE_SUBDOMAINS=True
# SECURE_HSTS_PRELOAD=True